alias typing="vim $HOME/.ref/docs/typing.md"
alias ytdl='youtube-dl -x --audio-format flac -o "%(title)s.%(ext)s" --postprocessor-args "-codec flac"'

alias wakastats="open https://wakatime.com/dashboard"

# Ag
