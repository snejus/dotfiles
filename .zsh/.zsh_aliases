for file in $(find $HOME/.d/.zsh/alias/*); do
    source $file

    name=$(basename $file)
    alias e$name="vim $file"
    alias s$name="source $file"
done

local __make_alias () {
    # 1 - single letter prefix, 2 - alias
    # 3 - command / path prefix, 4 - file
    alias $1$2="$4/$3"
}

local CONFIG_ALIAS=(
    "aw         awesome/rc.lua"
    "awt        awesome/themes/helohelo/theme.lua"
    "beet       beets/config.yaml"
    "kitty      kitty/kitty.conf"
    "kittyd     kitty/default.conf"
    "mpd        mpd/mpd.conf"
    "ncmc       ncmpcpp/config"
    "ncmb       ncmpcpp/bindings"
    "nf         neofetch/config.conf"
    "neo        neomutt/neomuttrc"
    "neob       neomutt/bindings"
    "neom       neomutt/mailcap"
    "neoc       neomutt/colors"
    "pic        picom/picom.conf"
    "qute       qutebrowser/config.py"
)

for mapping in $CONFIG_ALIAS[@]; do
    __make_alias e $(echo $mapping) "vim $XDG_CONFIG_HOME"
done

local EDIT_AND_SOURCE=(
    "zal    .zsh_aliases"
    "env    .zshenv"
    "prof   .zprofile"
    "zl     .zlogin"
    "zsh    .zshrc"
)
for mapping in $EDIT_AND_SOURCE[@]; do
    __make_alias e $(echo $mapping) "vim $HOME/.d/.zsh"
    __make_alias s $(echo $mapping) "source $HOME/.d/.zsh"
done

alias upd="szsh"
alias ecl="vim $HOME/.d/bin/changelog"
alias egitc="vim $HOME/.config/git/config"
alias esetuppy="vim $VILLE/setuppy2pyproject"
alias etool="vim $HOME/repo/sn-scriptville/tool"
alias evim="vim $HOME/.d/vimrc"
alias evimc="vim $HOME/.vim/bundle/vim-deus/colors/deus.vim"

