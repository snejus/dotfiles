[alias]
    l  = log --graph --all --pretty=nice -12
    l2 = log --graph --decorate --all --pretty=nice
	lo = log --pretty=lo --graph --date=human
	ls = log --pretty=lo --graph --date=human --simplify-by-decoration
	la  = log --pretty=lc --graph --all
	lao = log --pretty=lo --graph --all --date=human
	las = log --pretty=lo --graph --all --date=human --simplify-by-decoration

	lg  = log --pretty=lc --graph --branches=* --tags=* --remotes=origin --remotes=upstream
	lgo = log --pretty=lo --graph --branches=* --tags=* --remotes=origin --remotes=upstream --date=human
	lgs = log --pretty=lo --graph --branches=* --tags=* --remotes=origin --remotes=upstream --date=human --simplify-by-decoration

[branch]
    autoSetupRebase = always

[checkout]
    defaultRemote = origin

[color]
    branch       = always
    diff         = auto
    interactive  = always
    status       = true
    pager        = true
    push         = always
    transport    = always
    ui           = true

[commit]
    gpgSign      = true

[core]
    editor       = vim
    filemode     = false
    pager        = diff-so-fancy | less --tabs=4 -RFX

[fetch]
    writeCommitGraph = true

[log]
    date = format:%F %H:%M

[pretty]
    lo = tformat:\
%C(bold yellow)%h%C(reset)\
%C(italic bold green)%d%C(reset) \
%s \
%C(italic blue)%ad%C(reset) \
%C(241)%aN%C(reset)

    lc = format:\
%C(bold yellow)%h%C(reset) \
%C(white)-%C(reset) \
%C(italic blue)%ad%C(reset) \
%C(italic cyan)(%ar)%C(reset)\
%C(auto)%d%C(reset)%n \
%C(white)â¤·%C(reset) \
%C(bold)%s \
%C(241)- %aN <%aE>%C(reset)%n

    nice = \
%C(white)%<|(12,trunc)%ar%C(reset) \
%C(bold yellow)%an%C(reset) \
%C(bold red)%h%C(reset) \
%C(bold blue)%s%C(reset) \
%C(bold dim yellow)%d%C(reset)

[rebase]
    abbreviateCommands = true

[tig]
    line-graphics = yes

[tag]
    gpgSign = true

[url "git@github.com:"]
    insteadOf = https://github.com/
