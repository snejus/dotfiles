[user]
    name = Šarūnas Nejus

[color]
    filemode = false
    diff = auto
    status = auto
    branch = auto
    pager = true

[core]
    excludesfile = .gitignore
    pager = diff-so-fancy | less --tabs=4 -RFX
    hooksPath = .githooks
    editor = vim

[branch]
    autoSetupRebase = always

[alias]
    l = log --graph  --abbrev-commit --decorate --format=format:'%C(bold red)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(bold blue)%s%C(reset) %C(white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all -n 12
    lg1 = log --graph  --abbrev-commit --decorate --format=format:'%C(bold red)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(bold blue)%s%C(reset) %C(white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''%C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all

    # list files which have changed since REVIEW_BASE
    # (REVIEW_BASE defaults to 'master' in my zshrc)
    files = !git diff --name-only $(git merge-base HEAD \"$REVIEW_BASE\")

    # Same as above, but with a diff stat instead of just names
    # (better for interactive use)
    stat = !git diff --stat $(git merge-base HEAD \"$REVIEW_BASE\")

    # Open all files changed since REVIEW_BASE in Vim tabs
    # Then, run fugitive's :Gdiff in each tab
    review = !mvim -p $(git files) +\"tabdo Gdiff $REVIEW_BASE\"

    # Same as the above, except specify names of files as arguments,
    # instead of opening all files:
    # git reviewone foo.js bar.js
    reviewone = !mvim -p +\"tabdo Gdiff $REVIEW_BASE\"

    wtf = !git-wtf

[credential]
     helper = osxkeychain

[url "git@github.com:/"]
     insteadOf = https://github.com/
