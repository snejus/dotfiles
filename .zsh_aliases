# MIME
alias -s md="glow -p"
alias -s rst=bat
alias -s png="feh -F"
alias -s jpg="feh -F"

export CONFIGS="$HOME/.configs"

# General
alias brave="brave-browser"
alias ci="xclip -selection clipboard"
alias co="xclip -selection clipboard -o"
alias disablenativescreen="xrandr --output eDP-1 --off"
alias env="env | sort | pygmentize -l bash -O style=fruity"
alias fixvale="vim ~/Documents/misc/vale-boilerplate/.vale.ini"
alias fixscreen="xrandr --output HDMI-2 --primary --right-of eDP-1"
alias grip="grip -b"
alias h='function hdi(){ howdoi $* -c -n 5; }; hdi'
alias list_ppas="grep -r --include '*.list' '^deb ' /etc/apt/sources.list /etc/apt/sources.list.d/"
alias loghttp="tcpflow -p -c -i eth0 port 80 | grep -oE '(GET|POST|HEAD) .* HTTP/1.[01]|Host: .*'"
alias ls="exa -lah"
alias lsn="exa -lah -snew"
alias m="make"
alias ms="make shell"
alias ncm="ncmpcpp"
alias notes="brave ~/wikis/main/html/index.html &"
alias open="xdg-open"
alias pgvim="poetry run gvim"
alias peotry="poetry"
alias printpath='echo $PATH | tr : "\n"'
alias screenshot="flameshot gui"
alias she="poetry shell && source .expenv"
alias typing="vim $HOME/.ref/docs/typing.md"
alias td="td --color"
alias upd="source $CONFIGS/.zshrc"
alias xterm="xterm &"

# Ag
alias ag="ag --silent"
alias agl="ag --silent --pager less --color"
alias agf="ag --silent -g"

# Apt
alias install="sudo apt update && sudo apt install"
alias purge="sudo apt purge"
alias remove="sudo apt remove"

# Docker
alias dockerip='eval $(docker-machine env default)'
alias dco="docker-compose"
alias docker_usage="docker system df"

# Dephell
alias dp="dephell package"

# Edit often accessed files
alias eal="vim $CONFIGS/.zsh_aliases"
alias ezsh="vim $CONFIGS/.zshrc"
alias efzf="vim $CONFIGS/.zsh_fzf"
alias egg="vim /usr/local/bin/gg"
alias egit="vim $CONFIGS/.gitconfig"
alias efunc="vim $CONFIGS/.zsh_func"
alias esens="vim $CONFIGS/.zsh_sens"
alias evimrc="vim $CONFIGS/.vimrc"
alias eaw="vim $CONFIGS/.config/awesome/rc.lua"
alias eawt="vim $CONFIGS/.config/awesome/themes/helohelo/theme.lua"
alias etm="vim $CONFIGS/.tmux.conf"
# and source some of them
alias sal="source $CONFIGS/.zsh_aliases"
alias szsh="source $CONFIGS/.zshrc"
alias sfzf="source $CONFIGS/.zsh_fzf"
alias sfunc="source $CONFIGS/.zsh_func"
alias ssens="source $CONFIGS/.zsh_sens"

# custom scripts
alias ecl="vim $HOME/.ref/gists/changelog/changelog"

# fzf
alias fs="fzf"

# Git
alias -g csu="--compact-summary"
alias ga="git add"
alias gc="git checkout"
alias gc-="git checkout -"
alias gcb="git checkout -b"
alias gcm="git checkout master"
alias gct="git checkout -t"
alias gcom="gg cn"
alias gdm="git diff master"
alias gre="git checkout --"
alias gd="git diff"
alias gfe="git fetch"
alias gl="git l"
alias gl1="git l1"
alias gl2="git l2"
alias glse="git l2 -S"
alias gm="git merge"
alias gmom="git merge origin/master"
alias gp="git pull"
alias gpou="git push origin -u"
alias grb="git rebase"
alias gre='git restore `gf`'
alias grh="git reset --hard HEAD"
alias groot='$(git rev-parse --show-cdup)'
alias gs="git status"
alias gst="git stash"
alias gstp="git stash pop"
alias gstl="git stash list | pygmentize -l yaml -O style=fruity"
alias gnew="git diff --name-only --diff-filter=d 2>/dev/null | xargs bat --diff --diff-context=2"
alias gitinspection="gitinspector --file-types='**' --grading -T --format html > gitinspector.html && open gitinspector.html"
alias openpr="gh pr view --web"
alias openrepo="gh repo view --web"
alias wtf="git wtf --long --all | pygmentize -l yaml -O style=fruity"

# Jira
alias showfields='jira fields | ag \"system\" | sed "s/.*: //" | tr -d \", | sort'

# Python
alias ma="python manage.py"
alias restme="restview --css ~/.ref/github.css README.rst"
alias oldbump="python3 setup.py --quiet build bdist_wheel && rm -rf build/ dist/"

# Poetry
alias poa="poetry add"
alias pos="poetry show"
alias psh="poetry shell"
alias por="poetry remove"
alias pou="poetry update -vv"
alias poi="poetry install -vv"

# Vagrant
alias vu="vagrant up"
alias vs="vagrant ssh"
alias vh="vagrant halt"
